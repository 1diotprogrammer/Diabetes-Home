<div {{#if patient.darkmod}}class="gradientBackgroud gradientBackgroud_dark"{{else}}class="gradientBackgroud"{{/if}}>
    <div {{#if patient.darkmod}}class="logo logo_dark"{{else}}class="logo"{{/if}}>

        <b>
            Diabetes@Home
        </b>
    </div>
      <div {{#if patient.darkmod}}class="colorscheme colorscheme_dark"{{else}}class="colorscheme" {{/if}}>
          {{#with patient}}
            <!-- change customer light mode and dark mode -->
            <a href="/patient/{{this._id}}/darkmode">
                <i class="fa-solid fa-circle-half-stroke"></i>
            </a>
            {{/with}}
        </div>
    <!-- name and the ranking medal -->
    <div class="nameHomepage">
        <b>
            {{#with patient}}
            <a href="/patient/{{this._id}}/personal_detail" {{#if this.darkmod}} class="patientname_pages patientname_pages_dark"{{else}}class="patientname_pages"{{/if}} >
                <span> {{this.first_name}}</span>
            </a>

            <a>
                {{#if (overEighty this.percentage)}}
                    <!-- <i class="fas fa-medal medalyellow"></i> -->
                    <i class="fas fa-medal medal medalyellow">
                        <div class="explain">
                            If your engagement rate is over 80%, it will become a golden medal.
                        </div>
                    </i>
                {{else}}
                    <i class="fas fa-medal medal medalgrey">
                        <div class="explain">
                            If your engagement rate is over 80%, it will become a golden medal.
                        </div>
                    </i>
                {{/if}}
            </a>
            {{/with}}
        </b>
    </div>

    <!-- button to pages -->
    {{#with patient}}
    <a href="/patient/{{this._id}}/record">
        {{/with}}

        <div class="dataHomepage">
            <b>
                Record Data
            </b>
        </div>
    </a>
     {{#with patient}}
    <a href="/patient/{{this._id}}/recordhistory">
        {{/with}}
        <div class="historyHomepage">
            <b>
                Record History
            </b>
        </div>
    </a>
     {{#with patient}}
    <a href="/patient/{{this._id}}/leaderboard">
        {{/with}}
        <div class="leaderboardHomepage">
            <b>
                Leaderboard
            </b>
        </div>
    </a>
    <!-- message box writed from client -->
    <div class="messageboxHomepage">
        <div class="messageboxHomepage_title">
            <b>
                Message Box
            </b>
        </div>
        {{#with patient}}
            <div class="messageboxHomepage_content">
                {{this.message}}
            </div>
        {{/with}}
    </div>
</div>